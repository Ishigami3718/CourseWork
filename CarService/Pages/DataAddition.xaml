<Page x:Class="CarService.Pages.DataAddition"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarService.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">


    
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TabControl Grid.Column="0">
                <TabItem Header="Роботи">
                    <DataGrid Grid.Column="0" ColumnWidth="*" HorizontalAlignment="Stretch" CanUserResizeColumns="False" CanUserResizeRows="False" 
      VerticalAlignment="Stretch" CanUserSortColumns="False" AutoGenerateColumns="False" ItemsSource="{Binding Services}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Найменування номенклатури" Binding="{Binding Path=Service.Name}"/>
                            <DataGridTextColumn Header="Ціна" Binding="{Binding Path=Service.Price}"/>
                            <DataGridTextColumn Header="Сума з ПДВ" Binding="{Binding Path=TotalPrice}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
                <TabItem Header="Товари">
                </TabItem>
            </TabControl>
            <TabControl Grid.Column="1">
                <TabItem Header="Виконавці">
                    <DataGrid ColumnWidth="*" HorizontalAlignment="Stretch" CanUserResizeColumns="False" CanUserResizeRows="False" 
      VerticalAlignment="Stretch" CanUserSortColumns="False" AutoGenerateColumns="False" ItemsSource="{Binding Workers}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Співробітник" Binding="{Binding Path=Name}"/>
                        <DataGridTextColumn Header="Доля" Binding="{Binding Path=Quota}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
            </TabControl>
        </Grid>
    

    
</Page>
