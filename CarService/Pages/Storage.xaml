<Page x:Class="CarService.Pages.Storage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarService.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Storage">

    <Grid>
        <DockPanel>
            <ToolBarTray DockPanel.Dock="Top">
                <ToolBar>
                    <Button x:Name="AddObject" Width="25" ToolTip="Додати">
                        <Image Source="pack://application:,,,/Images/Adding.png" Stretch="Uniform"/>
                    </Button>
                    <Button x:Name="Sort" Width="25" ToolTip="Сортувати">
                        <Image Source="pack://application:,,,/Images/Sorting.png" Height="25" Width="15"/>
                        <Button.ContextMenu>
                            <ContextMenu x:Name="Context">
                                <MenuItem Header="За ім'ям" />
                                <MenuItem Header="За датою" />
                                <MenuItem Header="За Id" />
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                    <Button Width="25" ToolTip="Видалити">
                        <Image Source="pack://application:,,,/Images/Deleting.png" Height="25" Width="15"/>
                    </Button>
                    <Button Width="25" ToolTip="Редагувати">
                        <Image Source="pack://application:,,,/Images/Redacting.png" Height="25" Width="15"/>
                    </Button>
                    <TextBox x:Name="Search" Width="125" Margin="10,0,0,0" VerticalAlignment="Center"
                     Text="Введіть для пошуку"/>
                </ToolBar>
            </ToolBarTray>
            <DataGrid ColumnWidth="*" HorizontalAlignment="Stretch" CanUserResizeColumns="False" CanUserResizeRows="False" 
      VerticalAlignment="Stretch" CanUserSortColumns="False" AutoGenerateColumns="False" ItemsSource="{Binding Details}" HorizontalScrollBarVisibility="Auto"
          VerticalScrollBarVisibility="Auto" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Назва" Binding="{Binding Path=Details.Name}"/>
                    <DataGridTextColumn Header="Модель" Binding="{Binding Path=Details.Model}"/>
                    <DataGridTextColumn Header="Одиниці виміру" Binding="{Binding Path=Details.Value}"/>
                    <DataGridTextColumn Header="Клькість" Binding="{Binding Path=Details.Count}"/>
                    <DataGridTextColumn Header="Ціна" Binding="{Binding Path=Details.Price}"/>
                </DataGrid.Columns>
        </DataGrid>
        </DockPanel>
    </Grid>
</Page>
