<Window x:Class="CarService.Windows.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarService.Windows"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="0" Header="Клієнт" FontSize="16" Margin="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Ім'я замовника:" Height="25" VerticalAlignment="Center" HorizontalAlignment="Center"
                   FontSize="15" Width="110"/>
                <TextBox Grid.Row="0" Grid.Column="1" Height="35" MinWidth="110" TextWrapping="Wrap" FontSize="15"/>
                <CheckBox Content="Регулярний" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"
                   FontSize="15" Width="116"/>
                <TextBlock Text="Періодичність:" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"
           FontSize="15" Width="101"/>
                <TextBlock Text="Знижка,%:" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"
FontSize="15" Width="75"/>
                <TextBox Grid.Row="0" Grid.Column="3" Height="35" MinWidth="110"/>
                <TextBox Grid.Row="1" Grid.Column="3" Height="35" MinWidth="110"/>
            </Grid>
        </GroupBox>
        <GroupBox Grid.Row="1" Header="Машина" FontSize="16" Margin="3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="Марка:" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14"/>
                <TextBlock Text="Модель:" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14"/>
                <TextBlock Text="Номер:" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14"/>
                <TextBlock Text="Пробіг:" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14"/>
                <TextBlock Text="Дата реєстрації:" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" TextWrapping="Wrap"/>
                <TextBox Grid.Row="0" Grid.Column="1" Height="35"/>
                <TextBox Grid.Row="0" Grid.Column="3" Height="35"/>
                <TextBox Grid.Row="0" Grid.Column="5" Height="35"/>
                <TextBox Grid.Row="1" Grid.Column="1" Height="35"/>
                <DatePicker Grid.Row="1" Grid.Column="3" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Сервіс" Grid.Row="2" FontSize="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <ListBox Grid.ColumnSpan="2" Grid.RowSpan="2"/>
                <Button Content="Додати" Grid.Column="2" Margin="10"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
